<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding='@dimen/padding_screen'
    tools:context=".MainActivity">
    <TextView
        android:id="@+id/app_name"
        android:text="@string/app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/logo_font_size"
        />
    <EditText
        android:id="@+id/player1_name"
        android:hint="@string/player1_name_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="15"
        android:layout_below="@id/app_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/marginTop_screen1"
        />
    <EditText
        android:id="@+id/player2_name"
        android:hint="@string/player2_name_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="15"
        android:layout_below="@id/player1_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/marginTop_screen1"
        />
    <Button
        android:id="@+id/btn_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btn_play"
        android:layout_below="@id/player2_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/marginTop_screen1"
        android:onClick="onClickPlayersNames"
        />
</RelativeLayout>